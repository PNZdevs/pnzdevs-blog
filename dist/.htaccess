


# This allows you to redirect index.html to a specific subfolder
# Redirect /index.html /pnzdevs-blog/dist/index.html

# This prevent directory browsing in .htaccess
Options All -Indexes

# Custom error page for error 403, 404 and 500
ErrorDocument 404 ../errorsPages/error.html
ErrorDocument 403 ../errorsPages/error.html
ErrorDocument 500 ../errorsPages/error.html

# php -- BEGIN cPanel-generated handler, do not edit
# Set the “ea-php70” package as the default “PHP” programming language.
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php70 .php .php7 .phtml
</IfModule>
# php -- END cPanel-generated handler, do not edit
